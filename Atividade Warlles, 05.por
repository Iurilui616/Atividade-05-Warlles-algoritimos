programa {
  funcao inicio() {
    //Declaração de variavel
    real n1, n2, n3, n4, media_aritimetica

    //entrada de dados
    escreva("Informe n1:")
    escreva(n1)
    leia(n1)

    escreva("Informe n2:")
    escreva(n2)
    leia(n2)

    escreva("Informe n3:")
    escreva(n3)
    leia(n3)

    escreva("Informe n4:")
    escreva(n4)
    leia(n4)

    //processamento
    media_aritimetica=(n1+n2+n3+n4)/4

    //saida de dados
    escreva("media")
    escreva(media_aritimetica)
    
  }
}
